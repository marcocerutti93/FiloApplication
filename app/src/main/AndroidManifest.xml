<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tesi.marco.filo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/heart"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/heart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".PatientDataActivity" />
        <activity android:name=".AddDataActivity" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/forgot_password_activity_title"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".AddEventActivity" />
        <activity
            android:name=".TherapyActivity"
            android:label="@string/therapy_activity_title" />
    </application>

</manifest>