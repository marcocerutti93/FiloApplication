<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding"
    android:paddingBottom="@dimen/padding"
    android:paddingStart="@dimen/reduced_padding"
    android:paddingEnd="@dimen/reduced_padding"
    android:orientation="vertical"
    tools:context="com.tesi.marco.filo.PatientDataActivity">

    <LinearLayout
        android:id="@+id/data_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleLarge"
            >
        </ProgressBar>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/name_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/patient"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:text="@string/info_not_present"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_surname"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_of_birth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/date_of_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fiscal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_of_birth"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fiscal_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fiscal_code"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/fiscal_code_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fiscal_code"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/gender_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/smoker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/smoker_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smoker"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/smoker_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hypertension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/smoker"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hypertension_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hypertension"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/hypertension_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dyslipidemia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hypertension"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dyslipidemia_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dyslipidemia"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/dyslipidemia_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/diabetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dyslipidemia"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diabetic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diabetic"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/diabetic_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_heart_attack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diabetic"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_heart_attack_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_heart_attack"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_heart_attack_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_angioplasty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_heart_attack"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_angioplasty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_angioplasty"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_angioplasty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_ventricular_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_angioplasty"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left_ventricular_function_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_ventricular_function"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/left_ventricular_function_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/creatinine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/left_ventricular_function"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/creatinine_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/creatinine"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/creatinine_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/number_of_ill_vessel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/creatinine"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_of_ill_vessel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_ill_vessel"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/number_of_ill_vessel_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/number_of_treated_vessel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_of_ill_vessel"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_of_treated_vessel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_treated_vessel"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/number_of_treated_vessel_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/angioplasty_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_of_treated_vessel"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angioplasty_type1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/angioplasty_type1"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/angioplasty_type1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/angioplasty_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/angioplasty_type1"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angioplasty_type2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/angioplasty_type2"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/angioplasty_type2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/angioplasty_type3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/angioplasty_type2"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angioplasty_type3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/angioplasty_type3"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/angioplasty_type3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/angioplasty_type4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/angioplasty_type3"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angioplasty_type4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/angioplasty_type4"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/angioplasty_type4_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
