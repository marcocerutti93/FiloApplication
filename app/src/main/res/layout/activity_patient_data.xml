<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding"
    android:paddingBottom="@dimen/padding"
    android:paddingStart="@dimen/reduced_padding"
    android:paddingEnd="@dimen/reduced_padding"
    android:orientation="vertical"
    tools:context="com.tesi.marco.filo.PatientDataActivity">

    <LinearLayout
        android:id="@+id/data_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:progressBarStyleLarge"
            >
        </ProgressBar>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_personal_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/personal_data"
                android:textSize="@dimen/text"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:id="@+id/name_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_personal_data"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/patient"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:text="@string/info_not_present"
                    android:textColor="@color/colorAccentDark"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fiscal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_surname"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fiscal_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fiscal_code"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/fiscal_code_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fiscal_code"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_of_birth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/date_of_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/place_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_of_birth"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/place_of_birth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place_of_birth"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/place_of_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/residency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_of_birth"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/residency_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/residency"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/residency_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/residency"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/telephone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telephone"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin" />

                <TextView
                    android:id="@+id/telephone_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/telephone"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/gender_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title_risk_factors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/risk_factors"
                android:textSize="@dimen/text"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:id="@+id/smoker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_risk_factors"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/smoker_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smoker"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/smoker_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hypertension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/smoker"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hypertension_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hypertension"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/hypertension_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dyslipidemia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hypertension"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dyslipidemia_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dyslipidemia"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/dyslipidemia_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/diabetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dyslipidemia"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diabetic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diabetic"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/diabetic_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/familiarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/diabetic"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/familiarity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/familiarity"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/familiarity_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_chemotherapy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/familiarity"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_chemotherapy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_chemotherapy"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_chemotherapy_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_radiotherapy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_chemotherapy"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_radiotherapy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_radiotherapy"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_radiotherapy_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_radiotherapy"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hiv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hiv_in_therapy"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/hiv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kidney_failure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hiv"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kidney_failure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kidney_failure"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/kidney_failure_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kidney_failure"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allergies_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allergies"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/allergies_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:gravity="end"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/allergies"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/status"
                android:textSize="@dimen/text"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_status"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bmi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmi"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/bmi_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_stemi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bmi"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_stemi_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_stemi"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_stemi_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/previous_nstemi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_stemi"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/previous_nstemi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous_nstemi"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/previous_nstemi_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_ventricular_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/previous_nstemi"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left_ventricular_function_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_ventricular_function"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/left_ventricular_function_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title_anamnesis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/left_ventricular_function"
                android:layout_marginTop="@dimen/double_margin"
                android:gravity="center_horizontal"
                android:text="@string/anamnesis"
                android:textSize="@dimen/text"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:id="@+id/internistica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_anamnesis"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/internistica_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/internistica"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/internistica_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/internistica_title"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cardiologica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/internistica"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardiologica_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cardiologica"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/cardiologica_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardiologica_title"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardiologica"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/last_visit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_visit"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/last_visit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_visit_title"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/advices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_visit"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/advices_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advices"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text"
                    android:textColor="@color/colorAccentDark"
                    android:layout_margin="@dimen/margin"/>

                <TextView
                    android:id="@+id/advices_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/advices_title"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"
                    android:text="@string/info_not_present"
                    android:layout_margin="@dimen/margin" />

            </RelativeLayout>



        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
