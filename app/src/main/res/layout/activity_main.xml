<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tesi.marco.filo.MainActivity"
    android:orientation="vertical"
    android:background="@color/grey_100">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/double_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/grey_100"
            android:padding="@dimen/margin"
            android:clipToPadding="false" >

            <ImageButton
                android:id="@+id/add_data_button"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/heart"
                android:background="@color/white"
                android:elevation="@dimen/elevation_main"/>

            <TextView
                android:id="@+id/add_data_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/add_data_button"
                android:layout_marginBottom="@dimen/margin"
                android:text="@string/add_data_button_text"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/text"
                android:background="@color/white"
                android:elevation="@dimen/elevation_main"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/grey_100"
            android:padding="@dimen/margin"
            android:clipToPadding="false">


            <ImageButton
                android:id="@+id/medicine_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_medicine"
                android:elevation="@dimen/elevation_main"/>

            <TextView
                android:id="@+id/medicine_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_alignBottom="@id/medicine_button"
                android:text="@string/medicine_button_text"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/text"
                android:background="@color/white"
                android:elevation="@dimen/elevation_main"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/double_margin"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/grey_100"
            android:padding="@dimen/margin"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/patient_information_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_clinic_information"
                android:elevation="@dimen/elevation_main"/>

            <TextView
                android:id="@+id/patient_information_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/patient_information_button"
                android:layout_marginBottom="@dimen/margin"
                android:background="@color/white"
                android:text="@string/patient_information_button_text"
                android:textAlignment="center"
                android:textSize="@dimen/text"
                android:textStyle="bold"
                android:elevation="@dimen/elevation_main"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/grey_100"
            android:padding="@dimen/margin"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/logout"
                android:elevation="@dimen/elevation_main"/>

            <TextView
                android:id="@+id/logout_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/logout_button"
                android:layout_marginBottom="@dimen/margin"
                android:background="@color/white"
                android:text="@string/logout_button_text"
                android:textAlignment="center"
                android:textSize="@dimen/text"
                android:textStyle="bold"
                android:elevation="@dimen/elevation_main" />

        </RelativeLayout>

    </TableRow>
</TableLayout>
